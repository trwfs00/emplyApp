<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployerHomeActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp">
        <RelativeLayout
            android:id="@+id/EmployerBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnUser"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/default_user"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="4dp"
                android:layout_toEndOf="@id/btnUser">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning ðŸ‘‹"
                    android:textSize="12sp"
                    android:textColor="@color/font_grey"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employer"
                    android:textSize="20sp"
                    android:textColor="@color/font_dark"
                    android:textStyle="bold"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/notification_icon"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_box"
            android:layout_marginVertical="24dp"
            android:layout_below="@id/EmployerBar">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPostjob"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/rounded_primary_box"
                android:text="Post a job"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/YourPost"
            android:layout_below="@id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/groupTxt_tipsforyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_dark"
                    android:text="Your Posts"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:background="#ffffff"
                    android:text="See all"
                    android:textAllCaps="false"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textColor="@color/font_inbox"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/YourPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/groupTxt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/RececntJobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_dark"
                    android:text="Recent Jobs"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:background="#ffffff"
                    android:text="See all"
                    android:textAllCaps="false"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textColor="@color/font_inbox"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/RececntJobs"
                    android:layout_marginTop="5dp"
                    tools:listitem="@layout/job_item_layout"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:elevation="0dp"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>