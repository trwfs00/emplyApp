<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backward_icon"/>

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:src="@drawable/img_sign_in"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgIcon"
        android:layout_centerHorizontal="true"
        android:text="Create New Account"
        android:textColor="#2F3B46"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/UsernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:background="@drawable/rounded_box"
        android:layout_below="@id/txtTitle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="14dp"
                android:src="@drawable/user_icon"
                android:layout_alignParentStart="true"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:background="@drawable/rounded_box"
                android:textColorHint="@color/font_inbox"
                android:layout_toRightOf="@id/user_icon"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/PasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_box"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/UsernameLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="14dp"
                android:src="@drawable/password_icon"
                android:layout_alignParentStart="true"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:paddingLeft="12dp"
                android:background="@drawable/rounded_box"
                android:textColorHint="@color/font_inbox"
                android:inputType="textPassword"
                android:layout_toRightOf="@id/password_icon"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/PasswordLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_box"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/PasswordLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/password_icon2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="14dp"
                android:src="@drawable/password_icon"
                android:layout_alignParentStart="true"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtConPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm your password"
                android:paddingLeft="12dp"
                android:background="@drawable/rounded_box"
                android:textColorHint="@color/font_inbox"
                android:inputType="textPassword"
                android:layout_toRightOf="@id/password_icon2"/>
        </RelativeLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnJobseeker"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_primary_box"
        android:layout_height="105dp"
        android:layout_below="@id/PasswordLayout2"
        android:scaleType="fitXY"
        android:src="@drawable/register_as_jobseeker"
        android:layout_marginTop="4dp"
        android:onClick="addUserJob"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnEmployer"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_box"
        android:layout_height="105dp"
        android:layout_below="@id/btnJobseeker"
        android:scaleType="fitXY"
        android:src="@drawable/register_as_employer"
        android:layout_marginTop="16dp"
        android:onClick="addUserEmp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="#A1B3C2"
            android:text="You have an account?"/>
        <TextView
            android:id="@+id/txtSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textStyle="bold"
            android:textColor="#009FFF"/>
    </LinearLayout>
</RelativeLayout>