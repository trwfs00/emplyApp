<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">
    <RelativeLayout
        android:id="@+id/profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="30dp">
        <RelativeLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnApp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="#00FFFFFF"
                android:scaleType="fitStart"
                android:src="@drawable/emply_semi_icon"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:layout_marginTop="8dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/font_dark"
                android:layout_toRightOf="@id/btnApp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="#00FFFFFF"
                android:scaleType="fitStart"
                android:src="@drawable/choice_icon"
                android:visibility="visible"
                android:padding="6dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/userBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/titleBar"
            android:layout_marginVertical="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/idCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="#00FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="4dp"
                android:layout_toEndOf="@id/idCardView">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning ðŸ‘‹"
                    android:textSize="12sp"
                    android:textColor="@color/font_grey"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teerawut Sungkagaro"
                    android:textSize="20sp"
                    android:textColor="@color/font_dark"
                    android:textStyle="bold"/>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/lineBold"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/userBar"
            android:background="@color/font_inbox" />
        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lineBold"/>
        <RelativeLayout
            android:id="@+id/btn_personal_information"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/account">
            <ImageView
                android:id="@+id/icon_personal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/persional_information"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persional Information"
                android:textSize="18sp"
                android:layout_toRightOf="@id/icon_personal"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/lineNormal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/btn_personal_information"
            android:background="@color/font_inbox"/>
        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lineNormal"/>
        <RelativeLayout
            android:id="@+id/btn_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/about">
            <ImageView
                android:id="@+id/icon_privacy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/privacy_policy"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy &amp; Policy"
                android:textSize="18sp"
                android:layout_toRightOf="@id/icon_privacy"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_term_service"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/btn_privacy_policy">
            <ImageView
                android:id="@+id/icon_tos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/term_of_services"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Services"
                android:textSize="18sp"
                android:layout_toRightOf="@id/icon_tos"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_about_us"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/btn_term_service">
            <ImageView
                android:id="@+id/icon_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/about_us"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About us"
                android:textSize="18sp"
                android:layout_toRightOf="@id/icon_about"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/lineNormal2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/btn_about_us"
            android:background="@color/font_inbox"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/lineNormal2"
            android:layout_marginVertical="30dp"
            android:background="@drawable/rounded_red_box"
            android:text="Sign out"
            android:textAllCaps="false"
            android:textColor="@color/font_white" />
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:padding="10dp"
    app:elevation="0dp"
    app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>