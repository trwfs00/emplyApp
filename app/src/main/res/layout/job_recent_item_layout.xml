<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/userBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/titleBar"
        android:layout_marginBottom="22dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/idCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/imgJob"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded_logo_job_box"
                android:visibility="visible"
                app:cardCornerRadius="12dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="14dp"
            android:layout_toEndOf="@id/idCardView">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/jobName"
                android:singleLine="true"
                android:text="Jobs"
                android:textSize="15sp"
                android:textColor="@color/font_dark"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/jobInc"
                    android:text="Companies"
                    android:textSize="12sp"
                    android:textColor="@color/font_grey"
                    android:layout_marginTop="3dp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/jobTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:text="Time"
                    android:textColor="@color/font_grey"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jobCountry"
                    android:text="Country"
                    android:textSize="12sp"
                    android:textStyle="normal"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/work"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jobType"
                    android:text="Type the work"
                    android:textSize="12sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>