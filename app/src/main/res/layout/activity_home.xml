<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp">
        <RelativeLayout
            android:id="@+id/userBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/idCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="#00FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="4dp"
                android:layout_toEndOf="@id/idCardView">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning ðŸ‘‹"
                    android:textSize="12sp"
                    android:textColor="@color/font_grey"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teerawut Sungkagaro"
                    android:textSize="20sp"
                    android:textColor="@color/font_dark"
                    android:textStyle="bold"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/notification_icon"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_box"
            android:layout_marginVertical="24dp"
            android:layout_below="@id/userBar">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnSearch"
                android:padding="16dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/search_icon"/>
            <TextView
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:paddingLeft="12dp"
                android:paddingTop="15dp"
                android:textSize="16sp"
                android:textColorHint="@color/font_inbox"
                android:hint="Search for a job or company"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/tipsforyou"
            android:layout_below="@id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/groupTxt_tipsforyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_dark"
                    android:text="Tips for you"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:background="#ffffff"
                    android:text="See all"
                    android:textAllCaps="false"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textColor="@color/font_inbox"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/groupTxt_tipsforyou"
                android:layout_marginVertical="16dp">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_primary_box"
                    android:scaleType="fitEnd"
                    android:src="@drawable/tipforyou_img_1" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/category"
            android:layout_below="@id/tipsforyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/groupTxt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_dark"
                    android:text="Category"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:background="#ffffff"
                    android:text="See all"
                    android:textAllCaps="false"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textColor="@color/font_inbox"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/groupTxt_category"
                android:layout_marginVertical="16dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:nestedScrollingEnabled="true"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:listitem="@layout/category_item_layout" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category">
            <TextView
                android:id="@+id/RececntJobs"
                android:text="Recent Jobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/font_dark" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/JobRecentRycyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/RececntJobs"
                android:layout_marginTop="5dp"
                tools:itemCount="2"
                tools:listitem="@layout/job_recent_item_layout"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:elevation="0dp"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>