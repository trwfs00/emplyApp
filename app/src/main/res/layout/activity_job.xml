<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".jobActivity"
    android:padding="30dp">
    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBack"
            android:layout_width="38dp"
            android:layout_height="16dp"
            style="@style/Widget.AppCompat.ActionBar.TabText"
            android:scaleType="fitStart"
            android:src="@drawable/backward_icon"
            android:layout_centerVertical="true"
            android:visibility="visible" />
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/jobCardView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/titleBar"
        app:strokeWidth="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="22dp"
        app:strokeColor="#EDF3F8">
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/jobImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginTop="33dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rounded_logo_job_box"
                android:visibility="visible"
                app:cardCornerRadius="123dp"/>
            <TextView
                android:id="@+id/jobName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jobs"
                android:layout_below="@id/jobImage"
                android:layout_marginTop="14dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2F3B46"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/jobInc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobName"
                android:text="Inc."
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="#009FFF"/>
            <TextView
                android:id="@+id/jobLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:layout_below="@id/jobInc"
                android:layout_centerHorizontal="true"
                android:textColor="#55697A"
                android:textSize="14sp"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/jobSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="18sp"
                android:layout_below="@id/jobLocation"
                android:layout_centerHorizontal="true"
                android:textColor="#009FFF"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/jobSalary"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type1"
                    android:textColor="#A1B3C2"
                    android:background="@drawable/rounded_box"
                    android:paddingHorizontal="10dp"
                    android:textSize="10sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:id="@+id/jobTypeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type2"
                    android:textColor="#A1B3C2"
                    android:background="@drawable/rounded_box"
                    android:paddingHorizontal="11dp"
                    android:textSize="10sp"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>