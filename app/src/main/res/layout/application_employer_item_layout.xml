<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/userBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/titleBar"
        android:layout_marginBottom="22dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/idCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/imgEmJob"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded_logo_job_box"
                android:visibility="visible"
                app:cardCornerRadius="123dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="4dp"
            android:layout_toEndOf="@id/idCardView">
            <TextView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:id="@+id/jobEmName"
                android:text="Jobs"
                android:textSize="20sp"
                android:textColor="@color/font_dark"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:id="@+id/jobEmInc"
                android:text="Companies"
                android:textSize="12sp"
                android:textColor="@color/font_grey"
                android:layout_marginTop="3dp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/jobEmCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_box"
                android:paddingHorizontal="16dp"
                android:text="Count"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/arrow_icon"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>